---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Home | Cyber Blog">
  <div class="container">
    <section class="hero">
      <div class="terminal-window">
        <div class="terminal-header">
          <span class="terminal-button red"></span>
          <span class="terminal-button yellow"></span>
          <span class="terminal-button green"></span>
        </div>
        <div class="terminal-body">
          <p class="terminal-line">
            <span class="prompt">root@cyberblog:~$</span> whoami
          </p>
          <p class="terminal-output">Welcome to the mainframe.</p>
          <p class="terminal-line">
            <span class="prompt">root@cyberblog:~$</span> ls /blog
          </p>
          <p class="terminal-output">Exploring the digital void...</p>
          <p class="terminal-line blink">
            <span class="prompt">root@cyberblog:~$</span> <span class="cursor">_</span>
          </p>
        </div>
      </div>

      <h1 class="hero-title">
        <span class="glitch-hero" data-text="ENTER THE MATRIX">ENTER THE MATRIX</span>
      </h1>
      
      <p class="hero-description">
        A digital sanctuary where code meets consciousness. 
        Dive into the cyberpunk realm of technology, hacking, and digital philosophy.
      </p>

      <a href="/blog" class="cta-button">
        <span>Access Blog</span>
        <div class="button-glow"></div>
      </a>
    </section>
  </div>
</BaseLayout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
    max-width: 900px;
    margin: 0 auto;
  }

  .terminal-window {
    background: #1a1a1a;
    border: 2px solid var(--neon-cyan);
    border-radius: 8px;
    box-shadow: 
      0 0 20px rgba(0, 255, 234, 0.3),
      inset 0 0 20px rgba(0, 255, 234, 0.05);
    margin-bottom: 3rem;
    overflow: hidden;
  }

  .terminal-header {
    background: #0d0d0d;
    padding: 0.8rem;
    display: flex;
    gap: 0.5rem;
    border-bottom: 1px solid var(--neon-cyan);
  }

  .terminal-button {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .terminal-button.red {
    background: #ff5f56;
  }

  .terminal-button.yellow {
    background: #ffbd2e;
  }

  .terminal-button.green {
    background: #27c93f;
  }

  .terminal-body {
    padding: 1.5rem;
    text-align: left;
    font-family: 'Roboto Mono', monospace;
    font-size: 0.95rem;
  }

  .terminal-line {
    margin: 0.5rem 0;
  }

  .prompt {
    color: var(--neon-cyan);
    margin-right: 0.5rem;
  }

  .terminal-output {
    color: var(--neon-orange);
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .cursor {
    color: var(--neon-cyan);
    animation: blink 1s infinite;
  }

  @keyframes blink {
    0%, 49% { opacity: 1; }
    50%, 100% { opacity: 0; }
  }

  .hero-title {
    font-family: 'Orbitron', sans-serif;
    font-size: 4rem;
    font-weight: 900;
    margin: 2rem 0;
    color: var(--neon-cyan);
    text-transform: uppercase;
    letter-spacing: 5px;
    text-shadow: 
      0 0 20px var(--neon-cyan),
      0 0 40px var(--neon-cyan),
      0 0 60px var(--neon-cyan);
  }

  .glitch-hero {
    position: relative;
    display: inline-block;
  }

  .glitch-hero::before,
  .glitch-hero::after {
    content: attr(data-text);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.8;
  }

  .glitch-hero::before {
    animation: glitch-anim-1 2.5s infinite;
    color: var(--neon-pink);
    z-index: -1;
  }

  .glitch-hero::after {
    animation: glitch-anim-2 3s infinite;
    color: var(--neon-orange);
    z-index: -2;
  }

  @keyframes glitch-anim-1 {
    0%, 100% { transform: translate(0); }
    10% { transform: translate(-5px, 5px); }
    20% { transform: translate(5px, -5px); }
    30% { transform: translate(-5px, -5px); }
    40% { transform: translate(5px, 5px); }
    50% { transform: translate(0); }
  }

  @keyframes glitch-anim-2 {
    0%, 100% { transform: translate(0); }
    15% { transform: translate(5px, -5px); }
    25% { transform: translate(-5px, 5px); }
    35% { transform: translate(5px, 5px); }
    45% { transform: translate(-5px, -5px); }
    55% { transform: translate(0); }
  }

  .hero-description {
    font-size: 1.2rem;
    color: var(--text-secondary);
    margin: 2rem 0;
    line-height: 1.8;
  }

  .cta-button {
    position: relative;
    display: inline-block;
    padding: 1rem 3rem;
    margin-top: 2rem;
    background: transparent;
    color: var(--neon-cyan);
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 700;
    border: 2px solid var(--neon-cyan);
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: all 0.3s;
    overflow: hidden;
    z-index: 1;
  }

  .button-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: var(--neon-cyan);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width 0.5s, height 0.5s;
    z-index: -1;
  }

  .cta-button:hover {
    color: var(--bg-primary);
    box-shadow: 
      0 0 20px var(--neon-cyan),
      0 0 40px var(--neon-cyan);
  }

  .cta-button:hover .button-glow {
    width: 300px;
    height: 300px;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-description {
      font-size: 1rem;
    }

    .terminal-body {
      font-size: 0.85rem;
    }
  }
</style>